#!/bin/bash

# Can't use set -u because conda breaks

do_exit() {
    set -u
    code=$?
    if [ "$code" == "0" ]; then
        code=$1
    fi
    echo Server script exit code: $code
    echo $code > ~/exit_code
    exit $code
}

trap do_exit ERR

branch="$1"
name="$2"
tag="$3"
script="./train/$name.py"

if [ ! -d "miniconda3" ]; then
    wget -q https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    chmod a+x Miniconda3-latest-Linux-x86_64.sh
    echo "q
    yes

    yes" | ./Miniconda3-latest-Linux-x86_64.sh
    export PATH="~/miniconda3/bin:$PATH"
    echo "y
    " | conda create -n tensorflow python=3.5
    source activate tensorflow
    pip install https://github.com/lakshayg/tensorflow-build/raw/master/tensorflow-1.4.0-cp35-cp35m-linux_x86_64.whl
else
    export PATH="~/miniconda3/bin:$PATH"
    source activate tensorflow
fi
if [ ! -d "ml-experiments" ]; then
    git clone https://github.com/xinxinw1/ml-experiments.git
fi
cd ml-experiments
git fetch >/dev/null
git reset --hard HEAD >/dev/null
git checkout $branch >/dev/null
git reset --hard origin/$branch >/dev/null
if [ ! -d "data" ]; then
    mkdir data
    cd data
    wget -q http://cs.stanford.edu/people/karpathy/char-rnn/shakespeare_input.txt
    cd ..
fi
if [ -d "saved_summaries/$name/$tag" ]; then
    echo "saved_summaries/$name/$tag already exists on server, aborting!"
    do_exit 1
fi

if [ -d "saved_models/$name/$tag" ]; then
    echo "saved_models/$name/$tag already exists on server, aborting!"
    do_exit 1
fi
"$script"
do_exit 0
